// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id       Int     @id @default(autoincrement())
  text     String @unique
  author   Author @relation(fields: [authorId], references: [id])
  authorId Int
}

model Author {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  quotes Quote[]
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
}

model Pants {
  id Int @id @default(autoincrement())
  name String
  price Float
  color String
  size String
  sex String?
  material String
  product_type String 
}

model Socks{
  id Int @id @default(autoincrement())
  name String 
  price Float 
  color String 
  size String 
  sex String? 
  material String 
}

model Hat{
  id Int @id @default(autoincrement())
  name String
  price Float
  color String
  size String
  sex String?
  material String
  product_type String
}

// Add relation string later and overarching table
model Top {
  id Int @id @default(autoincrement())
  name String
  price Float
  color String?
  size String
  sex String?
  material String
}